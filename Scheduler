#include<stdio.h>
#include<unistd.h>

int main()
{
/*
at -> Arrival Time
bt -> Time Quantum
ct -> Completion Time
tat -> Turn Arround Time
wt -> Waiting Time
avg_wt -> Average Waiting Time
avg_tat -> Average Turn Arround Time
*/

//---------------------------------- USER INPUT -------------------------------
 int no,tq,ct=0,flag=0,tat,wt;
 float avg_wt=0,avg_tat=0;

 printf("Enter the Time Quantum:");
 scanf("%d",&tq);

 printf("Enter the no. of process: ");
 scanf("%d",&no);

 int bt[no],at[no],temp[no];
 int i=0,j;

 for(i=0;i<no;i++)
   {
    printf("\nEnter the Details for Process[%d]: \n",i+1);
    printf("Enter Arrival Time: ");
    scanf("%d", &at[i]);
    printf("Enter Burst Time: ");
    scanf("%d",&bt[i]);
   }

//----------------------------- SORTING ACCORDING TO  ARRIVAL TIME --------------
 int swap=0;
 for(i=0;i<no-1;i++)
   {
    for(j=0;j<no-i-1;j++)
      {
       if(at[j]>at[j+1])
         {
          swap=at[j];
          at[j]=at[j+1];
          at[j+1]=swap;

          swap=bt[j];
          bt[j]=bt[j+1];
          bt[j+1]=swap;
         }
      }
   }

 for(i=0;i<no;i++)
   {
    temp[i]=bt[i];
   }

//--------------------------------- MAIN CODE -----------------------------------
 int x=no;
 printf("\n\t\t\t\t\tTime Quantum = %d ms",tq);
 printf("\nProcess ID\tArrival Time\tBurst Time\tCompletion Time\t\tTurn Arround Time\tWaitng Time");

//------------------------------------ OUTPUT ----------------------------------
 while(x!=0)
 {
 if(temp[i]<=tq && temp[i]>0)
  {
   ct=ct+temp[i];
   temp[i]=0;
   flag=1;
  }
 else if(temp[i]>tq)
  {
   ct=ct+tq;
   temp[i]=temp[i]-tq;
  }

if(temp[i] flag==1)// Output
   {
    flag=0;
    wt=0;
    tat=0;

    tat=ct-at[i];
    wt=tat-bt[i];
    avg_wt+=wt;
    avg_tat+=tat;

    printf("\n%d\t\t%d\t\t%d\t\t%d\t\t\t%d\t\t\t%d", i+1,at[i], bt[i],ct,tat,wt);
    x--;
   }

 if(i==no-1)
  {
   i=0;
  }
 else if(at[i+1]<=ct)
  {i++;}
 else
  {i=0;}
}
printf("\n\n\nAverage Waiting Time = %.2lf ms\n\nAverage Turn arround Time = %.2lf ms\n",avg_wt/no,avg_tat/no);

//----------------------------------------------------------------------------------------------
}
